        <div id="contact">
            <div class="row justify-content-center">
                <h1>A Foxy Spelling Bee 2018</h1>
            </div>
            <div class="row justify-content-center">
                <h2>Definition:
                    <%=wordObject.definition%>
                </h2>
            </div>
            <div class="row justify-content-center">
                <form action="/nextWord" method="post" class="form-inline">
                    <div class="form-group">
                        <input class="form-control left-margin" type="text" id="spelling_attempt" name="spelling" placeholder="Your spelling here" autofocus/>
                        <button type="button" class="btn btn-primary left-margin" id="check_spelling">Check Spelling</button>

                        <input type="submit" class="btn btn-success left-margin" value="Next Word" />
                        <button type="button" class="btn btn-warning left-margin" id="reset_score">Reset</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-center">
            <h3 id="spelling-alert">&nbsp;</h3>
        </div>
        <div class="row justify-content-center">
            <audio controls autoplay>
                <source src="<%=wordObject.pronunciation%>" type="audio/mpeg"> Your browser does not support the audio element.
            </audio>
        </div>
        <div class="row justify-content-around">
            <h2 class="col-xs-6" id="player_one">Player 1: <div style="display:none;" id="player_one_score">0</div></h2>
            <h2 class="col-xs-6" id="player_two">Player 2: <div style="display:none;" id="player_two_score">0</div></h2>

